<div class="card borderxp" id="<%= dom_id product %>" >
  <div class="card-body">
    <p>
    <strong>Category:</strong>
    <%= product.category %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>
    
  <div class="btn-group">
    <%= link_to "Edit", edit_product_path(product) , class:"btn btn-warning"%> |
    <%= button_to "Destroy ", product, method: :delete, class:"btn btn-danger" %> |
    <%= link_to "Show this product", product, class:"btn btn-success" %>
  </div>
  </div>
</div>
